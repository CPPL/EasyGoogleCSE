<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client="site" method="upgrade">
    <name>MOD_EASYGOOGLECSE_XML_NAME</name>
    <author>Craig Phillips</author>
    <creationDate>##CREATEDATE##</creationDate>
    <copyright>Copyright Â© 2015 Craig Phillips Pty Ltd. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>support@craigphillips.biz</authorEmail>
    <authorUrl>http://seepeoplesoftware.com</authorUrl>
    <version>##VER## (##COMHASH##)</version>
    <description>MOD_EASYGOOGLECSE_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_easygooglecse">mod_easygooglecse.php</filename>
        <folder>tmpl</folder>
            <filename>index.html</filename>
            <filename>mod_easygooglecse.xml</filename>
        <folder>language</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="easygooglecse_key"
                    type="text"
                    default=""
                    placeholder="x9x9x9x9x9x9:yyyy"
                    label="MOD_EASYGOOGLECSE_FIELD_GCSEKEY_LABEL"
                    description="MOD_EASYGOOGLECSE_FIELD_GCSEKEY_DESC">
                </field>
                <field
                    name="googleReturnMenuID"
                    type="menuitem"
                    label="MOD_EASYGOOGLECSE_FIELD_RESULTS_PAGE_LABEL"
                    description="MOD_EASYGOOGLECSE_FIELD_RESULTS_PAGE_DESC" />
            </fieldset>
            <fieldset
                name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                    name="cachemode"
                    type="hidden"
                    default="static">
                    <option
                        value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
